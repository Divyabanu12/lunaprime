<div class="container-fluid ttvcmsbrandlist-slider">
	<div class="container ttvbrandlist-slider">
		{% if status_main_form %}
		<div class="ttvcmsbrandlist-slider-main-title-wrapper">
			{% include 'opc_electronic_electron_2501/template/helpfile/tvcmshelp_maintitle_design.twig' with {'main_title': main_title,'main_short_des': main_short_description,'main_des': main_description,'main_img': main_img } %}
		</div>
		{% endif %}
		{% if status_record_form %}
		<div class="ttvbrandlist">
			<div class="ttvbrandlist-slider-content-box ">
				{% for data in brandlist_data %}
				<div class="item ttvbrandlist-slider-wrapper-info ttvall-block-box-shadows">
					<div class="ttvbrand-img-block">
						{% if status_link %}<a href="{{ data.tvcmsbrandlist_link }}" title="{% if status_title %}{{ data.tvcmsbrandlist_lang['title'] }}{% endif %}">{% endif %}
							{% if status_image %}
								<img src="{{ data.tvcmsbrandlist_img }}" alt="{% if status_title %}{{ data.tvcmsbrandlist_lang['title'] }}{% endif %}">
							{% endif %}
							{% if status_link %}</a>{% endif %}
					</div>
					<div class="ttvbrandlist-slider-info-box">
						<div class="ttvbrandlist-slider-title">{% if status_title %}{{ data.tvcmsbrandlist_lang['title'] }}{% endif %}</div>
					</div>
				</div>
				{% endfor %}
			</div>
			
		</div>
		{% endif %}
	</div>
</div>
<script type="text/javascript">
/****************** Start Brand list Slider Js *******************************************/
$(document).ready(function() {

	$('.ttvbrandlist-slider-prev').click(function(e) {
		e.preventDefault();
		$('.ttvcmsbrandlist-slider .owl-nav .owl-prev').trigger('click');
	});

	$('.ttvbrandlist-slider-next').click(function(e) {
		e.preventDefault();
		$('.ttvcmsbrandlist-slider .owl-nav .owl-next').trigger('click');
	});

	$('.ttvcmsbrandlist-slider .ttvcms-brandlist-pagination-wrapper').insertAfter('.ttvcmsbrandlist-slider .ttvbrandlist-slider-content-box');

});

/****************** End Brand list Slider Js *******************************************/
</script>

